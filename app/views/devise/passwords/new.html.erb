<div class="container">
    <div class="span12 box_wrapper">
      <div class="row-fluid">
        <div class="span2"></div>
        <div class="span8 box" style="margin-top: 80px;">
            <div class="head">
              <center>
                <h3>Reset Password</h3>
              </center>
            </div>
            <div class="row-fluid">
              <div class="span2"></div>
              <div class="span8">
                <div class="form">
                  <h5>Enter your email address below to receive instructions on how to reset your password.</h5>
                  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
                    <%= devise_error_messages! %>
                    <%= f.text_field :email, :placeholder => "Email address", :class => "span10" %>
                    <%= f.submit "Reset password", :class => "btn btn-primary", :style=>"margin: 14px;" %>
                  <% end %>
                  <p class="already">
                    Know your password? <%= link_to('Sign in', new_user_session_path) %>
                  </p>
                </div>
              </div>
              <div class="span2"></div>
            </div>
        </div>
      </div>
    </div>
  </div>
