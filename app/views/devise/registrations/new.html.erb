  <div class="container">
    <div class="span12 box_wrapper">
      <div class="row-fluid">
        <div class="span2"></div>
        <div class="span8 box" style="margin-top: 80px;">
          <div class="head">
            <center>
              <h3>Create your account</h3>
            </center>
          </div>
          <div class="row-fluid">
            <div class="span3"></div>
            <div class="span7">
              <div class="form">
                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                  <div class="row">
                    Email Address: <%= f.text_field :email, :placeholder => "Email", :class=>"span11" %>
                  </div>
                  <div class="row">
                    Password: &nbsp;&nbsp;<%= f.password_field :password, :placeholder => "Password", :class=>"span11" %>
                  </div>
                  <div class="row">
                    Confirm Password: <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class=>"span11" %>
                  </div>
                  <div class="row">
                    <%= f.submit "Sign up" , :class =>"btn btn-primary" %>
                  </div>
                <% end %>
                <div class="row">
                  <p class="already">
                    Already have an account? <%= link_to('Sign in', new_user_session_path) %>
                  </p>
                </div>
              </div>
            </div>  
            <div class="span2"></div>
          </div>
        </div>
        <div class="span2"></div>        
      </div>
    </div>
  </div>
